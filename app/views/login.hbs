<div  dir='rtl' class="loginshowcase">
  <div class="logincontainer">
      <h3>تسجيل الدخول</h3>
    <form id="loginform" action="/login" method="post">
    <label for="email">اسم المستخدم:</label><span id="validEmail"></span>
    <input type="text" id="email" name="email" placeholder="أدخل إيميلك هنا ..." required maxlength="50">
    <label for="password">كلمة السر:</label><span id="validPass"></span>
    <input type="password" id='password' name="password" placeholder="كلمة السر هنا ..." required maxlength="35">

    {{#if errStatus}}  <div class="errornote">
      {{err}}
    </div>{{/if}}
      <input type="submit" value="تسجيل الدخول">

    </form>
  <a href='./signup' > انشأ حساب جديد</a>
  </div>
</div>
<script src="/js/validation.js"></script>
