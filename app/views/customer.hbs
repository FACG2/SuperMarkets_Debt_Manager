<div class="showcase">
  <div class="container">
    <div class="rside">
        <div class="container">
          <div class="table">
            <table>
              <thead>
                <tr>
                  <th>#</th>
                  <th>الصنف</th>
                  <th>الكمية</th>
                  <th>السعر</th>
                </tr>
              </thead>
              <tbody>
                {{#each debts}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{debt_type}}</td>
                  <td>{{debt_quantity}}</td>
                  <td>{{debt_price}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <div class="total">
            <h4>المجموع</h4>
            <h3>{{total}}</h3>
          </div>

        </div>
    </div>
    <div class="lside">
      <div class="container">
        <div class="userimage">
        <img src="/images/old.png" alt="cimage">
        </div>
        <div class="cinfo">
          <h5>Name:{{name}}</h5>
          <h4>DEPT : {{total}}</h4>
          <h5>Tel:{{phone}}</h5>
          <h5>address : {{address}}</h5>
        </div>
        <div class="adddebt_button">
          <img src="/images/add_dept.png" alt="add debt">
        </div>
      </div>

    </div>
  </div>
</div>
